@using System;
@using System.IO;
@model IEnumerable<Models.Product>

@{
    ViewData["Title"] = "Lista de Elementos";
    Layout = "_LayoutAdmin";

}

<h1>Lista de Productos</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create">Registrar Producto</a>
</p>



<div class="d-flex flex-wrap gap-2">
    @foreach (var item in Model)
    {
        string pathImage = (  item.ProductImages.FirstOrDefault() == null) ?  Url.Content("/Content/Image/default.png")  : Url.Content(item.ProductImages.FirstOrDefault().FilePath) ;                
    <div class="card" style="width: 18rem;">
        <img src="@pathImage" class="card-img-top w-50 h-0"  alt="...">
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <p class="card-text"> Precio Venta: $ @item.Sell_Price</p>
            <p class="card-text"> Precio Compra: $ @item.Buy_Price</p>
            <p class="card-text">@item.Description</p>
            <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.ProductId">Detalles</a> 
            <a class="btn btn-sm btn-outline-success" asp-action="Edit" asp-route-id="@item.ProductId">Editar</a> 
        </div>              
    </div>
    }
</div>




