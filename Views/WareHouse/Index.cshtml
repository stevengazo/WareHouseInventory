@model IEnumerable<Models.WareHouse>

@{
    ViewData["Title"] = "Ubicaciones";
    Layout = "_LayoutAdmin";

}

<h1>Lista de Ubicaciones</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create">Create New</a>
</p>



<div class="d-flex flex-wrap gap-2">
    @foreach (var item in Model)
    {
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <p class="card-text">@item.Address</p>
            <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.WareHouseId">Detalles</a> 
            <a class="btn btn-sm btn-outline-success" asp-action="Edit" asp-route-id="@item.WareHouseId">Editar</a> 
        </div>              
    </div>
    }
</div>



