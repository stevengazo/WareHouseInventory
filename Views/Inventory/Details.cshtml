@model Models.Inventory

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutAdmin";

}

<h1>Details</h1>

<div class="d-flex flex-column">
    <div class="col">
        <div class="d-flex flex-column">
            <div class="col">
                <div>
                    <h4>Inventory</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            Nombre Registro
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-2">
                            Fecha Inscripcion en Almacen
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CreationDate)
                        </dd>
                        <dt class="col-sm-2">
                            Existencias
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model =>
                            model.QuantityOfExistances)
                        </dd>
                        <dt class="col-sm-2">
                            Nombre del Almacen
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.WareHouse.Name)
                        </dd>
                        <dt class="col-sm-2">
                            Descripci√≥n de Producto
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Product.Description)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.InventoryId">Edit</a>
                    |
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
            <div class="col">
                    <!-- Entrada y Salidas -->
            </div>
</div>
